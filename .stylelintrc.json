{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "no-descending-specificity": null,
    "declaration-empty-line-before": [ 
      "always", 
        {
          "except": [
            "after-declaration",
            "first-nested",
          ],
          "ignore": [
            "after-comment",
            "inside-single-line-block",
          ],
        } 
     ],
  }
}
